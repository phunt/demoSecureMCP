# Application Settings
APP_NAME=secure-mcp-server
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Keycloak Configuration
KEYCLOAK_URL=https://keycloak.example.com
KEYCLOAK_REALM=mcp-realm
KEYCLOAK_CLIENT_ID=mcp-server
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# OAuth Configuration
OAUTH_ISSUER=https://keycloak.example.com/realms/mcp-realm
OAUTH_AUDIENCE=mcp-server
OAUTH_JWKS_URI=https://keycloak.example.com/realms/mcp-realm/protocol/openid-connect/certs
OAUTH_TOKEN_INTROSPECTION_ENDPOINT=https://keycloak.example.com/realms/mcp-realm/protocol/openid-connect/token/introspect

# MCP Server Configuration
MCP_RESOURCE_IDENTIFIER=https://api.mcp.example.com
MCP_SUPPORTED_SCOPES=mcp:read,mcp:write,mcp:infer

# Redis Configuration (for JWKS caching)
REDIS_URL=redis://redis:6379/0
REDIS_TTL=3600

# Security Settings
CORS_ORIGINS=https://app.example.com,https://localhost:3000
REQUIRE_HTTPS=true
HSTS_MAX_AGE=31536000

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@postgres:5432/mcp_db

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/mcp-server.log

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
